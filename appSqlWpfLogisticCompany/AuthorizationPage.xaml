<Page x:Class="appSqlWpfLogisticCompany.RegistrationAuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:appSqlWpfLogisticCompany"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">

    <Grid>
        <TextBlock Text="Авторизация"/>
        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Логин: "/>
                <TextBox Width="100" Height="20"></TextBox>
                
                <TextBlock Text="Пароль: "/>
                <TextBox Width="100" Height="20"></TextBox>

                <Button>Войти</Button>
                <Button Name="registrationButton" Click="registrationButton_Click">Регистрация</Button>
            </StackPanel>
        </WrapPanel>
    </Grid>
</Page>
