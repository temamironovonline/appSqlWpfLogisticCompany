<Window x:Class="appSqlWpfLogisticCompany.ChangeRegistrationData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:appSqlWpfLogisticCompany"
        mc:Ignorable="d"
        Title="ChangeRegistrationData" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock>Логин</TextBlock>
            <TextBox Name="loginUser" Width="100"></TextBox>
            <TextBlock>Почта</TextBlock>
            <TextBox Name="mailUser" Width="100"></TextBox>
            <TextBlock>Введите новый пароль</TextBlock>
            <PasswordBox Name="passwordUser" Width="100"></PasswordBox>
            <Button Name="changeButton" Click="changeButton_Click">Изменить</Button>
            <Button Name="backButton" Click="backButton_Click">Назад</Button>
        </StackPanel>
    </Grid>
</Window>
